{
  "name": "topnotch-sales-manager",
  "version": "1.0.0",
  "description": "Professional sales management and invoicing desktop application",
  "author": "TopNotch Electronics",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "npx serve dist -p 3000",
    "lint": "eslint",
    "electron": "electron .",
    "electron-prod": "NODE_ENV=production electron .",
    "electron-dev": "node scripts/detect-port.js && concurrently \"npm run dev\" \"wait-on http-get://localhost:$(cat .dev-port 2>/dev/null || echo 3000) && cross-env NODE_ENV=development DEV_PORT=$(cat .dev-port 2>/dev/null || echo 3000) electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "pack:mac": "npm run build && electron-builder --mac",
    "pack:win": "npm run build && electron-builder --win",
    "pack:linux": "npm run build && electron-builder --linux",
    "pack:all": "npm run build && electron-builder -mwl",
    "preelectron-pack": "npm run build && npm run postinstall",
    "postinstall": "npx electron-rebuild"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@heroicons/react": "^2.2.0",
    "@types/puppeteer": "^5.4.7",
    "@vitejs/plugin-react": "^5.0.4",
    "better-sqlite3": "^9.6.0",
    "chart.js": "^4.5.0",
    "clsx": "^2.1.1",
    "express": "^5.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "puppeteer": "^24.24.0",
    "react": "19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "19.1.0",
    "react-router-dom": "^7.9.4",
    "tailwind-merge": "^3.3.1",
    "uuid": "^13.0.0",
    "vite": "^7.1.9",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-router-dom": "^5.3.3",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^22.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.topnotch.sales-manager",
    "productName": "TopNotch Sales Manager",
    "directories": {
      "output": "release",
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json",
      "!node_modules/.cache",
      "!**/*.map"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ],
    "asar": false,
    "buildDependenciesFromSource": false,
    "extraResources": [
      {
        "from": "public/images",
        "to": "images",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "deleteAppDataOnUninstall": false
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.business",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "artifactName": "${productName}-${version}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon.png",
      "category": "Office",
      "artifactName": "${productName}-${version}.${ext}"
    }
  }
}
